<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
   
    <property name="hibernate.dialect"> org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost/wapsite</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password"></property>
    
    <property name="show_sql">true</property>
    <!-- List of XML mapping files -->
    <!-- <mapping class="ideawap.content.table.Content"/> -->
    <mapping class="ideawap.content.table.Game"/>
    <mapping class="ideawap.content.table.Video"/>
   </session-factory>
</hibernate-configuration>
